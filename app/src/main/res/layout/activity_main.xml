<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:configChanges="orientation|screenSize"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/navigator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            tools:layout_editor_absoluteX="-16dp">

        <TextView
                android:id="@+id/fileName"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>

        <ImageButton
                android:id="@+id/undo"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/undo">
        </ImageButton>

        <ImageButton
                android:id="@+id/redo"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/redo">
        </ImageButton>

        <RadioGroup
                android:id="@+id/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

            <ImageButton
                    android:id="@+id/hand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hand">
            </ImageButton>

            <ImageButton
                    android:id="@+id/pen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pen">
            </ImageButton>

            <ImageButton
                    android:id="@+id/highlighter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/highlighter">
            </ImageButton>

            <ImageButton
                    android:id="@+id/eraser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eraser">
            </ImageButton>
        </RadioGroup>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:id="@+id/pdfLayout"
            app:layout_constraintTop_toBottomOf="@id/navigator"
            app:layout_constraintBottom_toBottomOf="@id/pageNum"
            android:layout_width="1150dp"
            android:layout_height="1000dp"
            android:orientation="vertical"
            />
    <TextView
            android:id="@+id/pageNum"
            android:layout_weight="1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"/>
    <RelativeLayout
            android:id="@+id/navigator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:orientation="horizontal">
        <ImageButton
                android:id="@+id/left"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left">
        </ImageButton>
        <ImageButton
                android:id="@+id/right"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right">
        </ImageButton>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>